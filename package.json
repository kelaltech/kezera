{
  "name": "spva",
  "version": "0.0.0",
  "description": "A social platform for voluntary actions.",
  "main": "dist/production",
  "typings": "dist",
  "repository": "git@gitlab.com:kelal/spva.git",
  "author": "kelal tech.",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "temp:create-account": "run-s prod && node dist/modules/account/scripts/create-account.temp.js",
    "create-admin": "run-s prod && node dist/modules/account/scripts/create-admin.js",
    "all": "run-s build \"run-p web dev watch\"",
    "web": "cd web & run-s start",
    "android": "cd mobile & run-s android",
    "ios": "cd mobile & run-s ios",
    "build": "run-s clean tsc",
    "clean": "./node_modules/.bin/del-cli ./dist",
    "dev": "set EMAIL_FROM=spva.dev@gmail.com& set EMAIL_PASS=uY3gYisZRC6CKga& nodemon -w dist dist",
    "lint": "prettier {.,**}/*.{css,md,js,json,jsx,sass,scss,ts,tsx}",
    "format": "prettier --write {.,**}/*.{css,md,js,json,jsx,sass,scss,ts,tsx}",
    "precommit": "run-s prod && cd web && run-s prod && cd ../mobile && run-s prod && cd .. && git update-index --again",
    "prod": "run-s format build",
    "run-p": "node ./node_modules/npm-run-all/bin/run-p/index.js",
    "run-s": "node ./node_modules/npm-run-all/bin/run-s/index.js",
    "start": "set NODE_ENV=production& node --redirect-warnings=warnings.log .",
    "no-ssl-start": "set NO_SSL_REDIRECT=true& run-s start",
    "local": "set HOSTNAME=0.0.0.0& run-s start",
    "no-ssl-local": "set NO_SSL_REDIRECT=true& run-s local",
    "test": "echo \"This script is a no-op, so far.\"",
    "tsc": "tsc",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/i18next": "^12.1.0",
    "@types/koa-passport": "^4.0.2",
    "@types/nodemailer": "^4.6.6",
    "@types/passport-local": "^1.0.33",
    "@types/qs": "^6.5.2",
    "bcrypt": "^3.0.4",
    "husky": "^1.3.1",
    "i18next": "^15.0.6",
    "koa-passport": "^4.1.1",
    "meseret": "^1.7.12",
    "nodemailer": "^5.1.1",
    "npm-run-all": "^4.1.5",
    "passport-local": "^1.0.0",
    "qs": "^6.6.0",
    "socket.io": "^2.2.0"
  }
}
